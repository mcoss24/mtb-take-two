<div>
  <div>
    <h2>
      Photo #<%= @the_photo.id %> details
    </h2>

    <div>
      <div>
        <a href="/photos">
          Go back
        </a>
      </div>


    </div>

    <dl>
      <p>
      <dt>
        Location
      </dt>
      </p>
      <p>
      <h5>
        <%= Spot.where({:id => @the_photo.spot_id}).first.location %>
      </h5>
      </p>
      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_photo.image %>" alt= "a beautiful location somewhere" width = "1000" height = "750">
      </dd>

   
      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit photo
    </h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <div>
        <label for="image_box">
          Image URL
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_photo.image %>">
      </div>

      <div>
        <label for="spot_id_box">
          Location
        </label>

        <input type="text" id="spot_id_box" name="query_spot_id" value="<%= Spot.where({:id => @the_photo.spot_id}).first.location %>">
      </div>

      <button>
        Update photo
      </button>
    </form>
  </div>
</div>

<hr>
