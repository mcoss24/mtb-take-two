<div>
  <div>
    <h1>
      List of all trails
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new trail
    </h2>

    <form action="/insert_trail" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="spot_id_box">
          Location
        </label>

        <input type="text" id="spot_id_box" name="query_spot_id">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link">
      </div>

      <button>
        Create trail
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>


        <th>
          Name
        </th>

        <th>
          Destination
        </th>

        <th>
          Link
        </th>

        <th>
          Details
        </th>
      </tr>

      <% @list_of_trails.each do |a_trail| %>
      <tr>

        <td>
          <%= a_trail.name %>
        </td>

        <td>
          <%= Spot.where({ :id => a_trail.spot_id}).first.location %>
        </td>

        <td>
          <a href="<%= a_trail.link %>">
            External link
          </a>
        </td>
       
        <td>
          <a href="/trails/<%= a_trail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
